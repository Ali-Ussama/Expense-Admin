<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/image_fram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/place_image"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:padding="8dp"
            android:src="@color/gray_light" />
    </FrameLayout>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="معطم الجناني"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_header"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_fram"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:maxLines="1"
        android:text="مكان راقي، حيث يمكنك الاستمتاع انت و اصدقاءك او عائلتك فالاكلات المختلفة "
        android:textAlignment="inherit"
        android:textSize="@dimen/text_content"
        app:layout_constraintStart_toStartOf="@id/place_name"
        app:layout_constraintTop_toBottomOf="@id/place_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_width"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>